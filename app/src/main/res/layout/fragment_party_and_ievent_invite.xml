<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_20dp"
    tools:context="com.zhour.fragments.PartyAndIEventInviteFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="1"
        android:background="@drawable/ic_invite_event"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">


            <LinearLayout
                android:layout_width="@dimen/_0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10dp"
                android:layout_marginTop="@dimen/_15dp"
                android:layout_weight="0.8"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/tv_party_invite"
                    android:layout_width="@dimen/_0dp"
                    android:layout_height="@dimen/_40dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/rectangel_edit_left"
                    android:gravity="center"
                    android:text="@string/party_invite"
                    android:textAllCaps="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_16sp" />

                <View
                    android:layout_width="@dimen/_1dp"
                    android:layout_height="@dimen/_40dp"
                    android:background="@color/colorPrimary" />


                <TextView
                    android:id="@+id/tv_event_invite"
                    android:layout_width="@dimen/_0dp"
                    android:layout_height="@dimen/_40dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/rectangel_edit_fill_right"
                    android:gravity="center"
                    android:text="@string/event_invite"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_16sp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_date"
                android:layout_width="@dimen/_0dp"
                android:layout_height="@dimen/_40dp"
                android:layout_marginTop="@dimen/_15dp"
                android:layout_weight="0.2"
                android:padding="@dimen/_5dp"
                android:src="@drawable/ic_date" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_list_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_parent"
            android:layout_marginTop="@dimen/_10dp"
            android:visibility="gone">

            <ListView
                android:id="@+id/list_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/_5dp"
                android:layout_marginTop="@dimen/_5dp"
                android:divider="@color/colorPrimary" />

        </LinearLayout>

        <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/btn_submit"
            android:layout_below="@+id/ll_parent">

            <RelativeLayout
                android:id="@+id/rl_parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/iv_occasions"
                    android:layout_width="@dimen/_100dp"
                    android:layout_height="@dimen/_100dp"
                    android:layout_centerHorizontal="true"
                    android:padding="@dimen/_10dp"
                    android:src="@drawable/ic_birth_date" />

                <EditText
                    android:id="@+id/et_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_occasions"
                    android:layout_marginEnd="@dimen/_25dp"
                    android:layout_marginStart="@dimen/_25dp"
                    android:layout_marginTop="@dimen/_15dp"
                    android:backgroundTint="@color/transparent"
                    android:drawableEnd="@drawable/ic_calender"
                    android:focusable="false"
                    android:focusableInTouchMode="true"
                    android:lines="1"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_15sp"
                    android:visibility="visible" />

                <View
                    android:id="@+id/view_et_date"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1dp"
                    android:layout_below="@+id/et_date"
                    android:layout_marginBottom="@dimen/_10dp"
                    android:layout_marginEnd="@dimen/_25dp"
                    android:layout_marginStart="@dimen/_25dp"
                    android:background="@color/colorPrimary" />

                <LinearLayout
                    android:id="@+id/ll_party_invite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view_et_date"
                    android:layout_marginEnd="@dimen/_25dp"
                    android:layout_marginStart="@dimen/_25dp"
                    android:layout_marginTop="@dimen/_10dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <EditText
                        android:id="@+id/et_invite_types"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40dp"
                        android:layout_marginTop="@dimen/_15dp"
                        android:backgroundTint="@color/colorPrimary"
                        android:drawableEnd="@drawable/ic_calender"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:hint="@string/invite_type"
                        android:lines="1"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_15sp"
                        android:visibility="visible" />

                    <LinearLayout
                        android:id="@+id/ll_code_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_2dp"
                        android:layout_marginStart="@dimen/_2dp"
                        android:weightSum="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/et_phone"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@color/transparent"
                                    android:focusable="true"
                                    android:gravity="bottom"
                                    android:hint="@string/phone_numbers"
                                    android:inputType="phone"
                                    android:lines="1"
                                    android:maxLength="10"
                                    android:textColor="@color/text_color"
                                    android:textSize="@dimen/_15sp" />

                                <ImageView
                                    android:id="@+id/iv_phone_book"
                                    android:layout_width="@dimen/_20dp"
                                    android:layout_height="@dimen/_20dp"
                                    android:layout_gravity="bottom"
                                    android:layout_marginBottom="@dimen/_2dp"
                                    android:src="@drawable/ic_contacts" />
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_1dp"
                                android:layout_marginStart="@dimen/_2dp"
                                android:background="@color/colorPrimary" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40dp"
                        android:layout_marginStart="@dimen/_2dp"
                        android:layout_marginTop="@dimen/_10dp"
                        android:layout_weight="1">

                        <EditText
                            android:id="@+id/et_party_date"
                            android:layout_width="@dimen/_0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.4"
                            android:backgroundTint="@color/colorPrimary"
                            android:drawableEnd="@drawable/ic_calender"
                            android:focusable="false"
                            android:focusableInTouchMode="true"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/_15sp" />

                        <EditText
                            android:id="@+id/et_party_time"
                            android:layout_width="@dimen/_0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/_5dp"
                            android:layout_weight="0.4"
                            android:backgroundTint="@color/colorPrimary"
                            android:drawableEnd="@drawable/ic_clock"
                            android:focusable="false"
                            android:focusableInTouchMode="true"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/_15sp" />

                    </LinearLayout>

                    <EditText
                        android:id="@+id/et_venue"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40dp"
                        android:backgroundTint="@color/colorPrimary"
                        android:hint="@string/venue"
                        android:inputType="textCapSentences"
                        android:lines="1"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_15sp"
                        android:visibility="visible" />

                </LinearLayout>

                <EditText
                    android:id="@+id/et_invite_note"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_70dp"
                    android:layout_below="@+id/ll_party_invite"
                    android:layout_marginBottom="@dimen/_15dp"
                    android:layout_marginEnd="@dimen/_30dp"
                    android:layout_marginStart="@dimen/_30dp"
                    android:layout_marginTop="@dimen/_15dp"
                    android:background="@drawable/dotted_rectangel_boarder"
                    android:gravity="start|top"
                    android:hint="@string/invite_note"
                    android:lines="4"
                    android:padding="@dimen/_10dp"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_15sp" />
            </RelativeLayout>
        </ScrollView>

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/_15dp"
            android:layout_marginEnd="@dimen/_30dp"
            android:layout_marginStart="@dimen/_30dp"
            android:background="@drawable/ic_button_invite"
            android:gravity="center"
            android:text="@string/submit"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_15sp" />
    </RelativeLayout>


</RelativeLayout>
