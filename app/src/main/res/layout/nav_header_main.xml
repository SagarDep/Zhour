<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/_16dp"
    android:background="@android:color/black"
    android:gravity="top"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_30dp"
        android:gravity="center"
        android:paddingLeft="@dimen/_8dp"
        android:paddingRight="@dimen/_8dp">

        <com.zhour.customviews.CircularImageView
            android:id="@+id/iv_dp_pic"
            android:layout_width="@dimen/iv_profile_pic_h_w"
            android:layout_height="@dimen/iv_profile_pic_h_w"
            android:layout_gravity="center_horizontal"
            android:background="@color/transparent"
            android:padding="@dimen/_1dp"
            android:paddingTop="@dimen/_10dp"
            android:src="@drawable/ic_profile"
            app:civ_border="true"
            app:civ_border_color="@color/colorAccent"
            app:civ_shadow="false" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="@string/jaquline"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="@dimen/_18sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:text="9696969696"
        android:textColor="@color/yello_text"
        android:textSize="@dimen/_15sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2px"
        android:layout_marginEnd="@dimen/_15dp"
        android:layout_marginStart="@dimen/_15dp"
        android:layout_marginTop="@dimen/_10dp"
        android:alpha="0.4"
        android:background="@color/colorWhite" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10dp"
        android:orientation="vertical">

        <include layout="@layout/include_drawer_center" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/ic_bottom_drwer" />


</LinearLayout>
