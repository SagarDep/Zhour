<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/complaints_top_gray"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/_10dp">

        <TextView
            android:id="@+id/tv_complaint_des"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/app_name"
            android:textSize="@dimen/_18sp" />

        <TextView
            android:id="@+id/tv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="@dimen/_40dp"
            android:minWidth="@dimen/_40dp"
            android:text="@string/close_icon"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/_30sp"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1dp"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100dp"
        android:background="@drawable/complaints_bottom_gray"
        android:orientation="horizontal"
        android:padding="@dimen/_10dp"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="@dimen/_0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:gravity="center">

            <ImageView
                android:id="@+id/img_type"
                android:layout_width="@dimen/_55dp"
                android:layout_height="@dimen/_55dp"
                android:src="@drawable/pump" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/_1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"
            android:paddingEnd="@dimen/_3dp"
            android:paddingStart="@dimen/_3dp" />

        <LinearLayout
            android:id="@+id/ll_name_contact"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="55"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible"
            android:weightSum="55">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_5dp"
                android:layout_marginStart="@dimen/_10dp"
                android:layout_marginTop="@dimen/_5dp"
                android:ellipsize="end"
                android:lines="1"
                android:text="Chakravarthi"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_contact_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5dp"
                android:layout_marginEnd="@dimen/_5dp"
                android:layout_marginLeft="@dimen/_5dp"
                android:layout_marginStart="@dimen/_10dp"
                android:layout_marginTop="@dimen/_3dp"
                android:text="7013688846"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_flat_date"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="55"
            android:visibility="gone"
            android:weightSum="55">

            <LinearLayout
                android:id="@+id/ll_flat"
                android:layout_width="@dimen/_0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/_30dp"
                    android:minWidth="@dimen/_40dp"
                    android:src="@drawable/apartment_image" />

                <TextView
                    android:id="@+id/tv_flat_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_5dp"
                    android:layout_marginTop="@dimen/_5dp"
                    android:text="@string/accept_small"
                    android:textSize="@dimen/_14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:layout_width="@dimen/_1dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray"
                android:paddingEnd="@dimen/_3dp"
                android:paddingStart="@dimen/_3dp" />

            <LinearLayout
                android:id="@+id/ll_date"
                android:layout_width="@dimen/_0dp"
                android:layout_height="match_parent"
                android:layout_weight="30"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/_30dp"
                    android:minWidth="@dimen/_40dp"
                    android:src="@drawable/cal_date" />

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_5dp"
                    android:layout_marginTop="@dimen/_5dp"
                    android:gravity="center"
                    android:text="@string/date"
                    android:textSize="@dimen/_14sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="@dimen/_1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"
            android:paddingEnd="@dimen/_3dp"
            android:paddingStart="@dimen/_3dp" />

        <LinearLayout
            android:id="@+id/ll_call"
            android:layout_width="@dimen/_0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/_30dp"
                android:minWidth="@dimen/_30dp"
                android:src="@drawable/done_button"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:minHeight="@dimen/_40dp"
                android:minWidth="@dimen/_40dp"
                android:text="@string/call_icon"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/_30sp" />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5dp"
                android:layout_marginTop="@dimen/_5dp"
                android:text="@string/call"
                android:textSize="@dimen/_14sp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>